generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model login_web {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model User {
  id                 String         @id @default(cuid())
  username           String
  fullname           String
  email              String         @unique
  phone              String?
  password           String?
  createdAt          DateTime       @default(now())
  emailVerified      DateTime?
  image              String?
  Account            Account[]
  blogs              Blog[]
  comments           Comment[]
  following          Follow[]       @relation("UserFollowers")
  followers          Follow[]       @relation("UserFollowing")
  likes              Like[]
  sentMessages       Message[]      @relation("MessageSender")
  actorNotifications Notification[] @relation("ActorNotifications")
  notifications      Notification[] @relation("UserNotifications")
  participations     Participant[]
  savedPosts         SavedPost[]
  Session            Session[]
  report             report[]
}

model Blog {
  id               String                   @id @default(cuid())
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  authorId         String
  caption          String
  sharedFromId     String?
  imageUrls        String[]
  hashtags         String[]
  search_vector    Unsupported("tsvector")?
  caption_unaccent String?
  isdeleted        Boolean                  @default(false)
  deletedat        DateTime?                @db.Timestamp(6)
  deletedbyadmin   String?
  author           User                     @relation(fields: [authorId], references: [id])
  sharedFrom       Blog?                    @relation("BlogShare", fields: [sharedFromId], references: [id])
  shares           Blog[]                   @relation("BlogShare")
  admin            admin?                   @relation(fields: [deletedbyadmin], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "blog_deletedbyadmin_fkey")
  comments         Comment[]
  likes            Like[]
  notifications    Notification[]           @relation("BlogNotifications")
  savedBy          SavedPost[]
  blogHashtags     BlogHashtag[]
  report           report[]

  @@index([caption_unaccent(ops: raw("gin_trgm_ops"))], map: "blog_caption_trgm_idx", type: Gin)
  @@index([search_vector], map: "blog_search_vector_idx", type: Gin)
  @@index([authorId, createdAt(sort: Desc)], map: "blog_author_createdat_idx")
  @@index([sharedFromId, createdAt(sort: Desc)], map: "blog_sharedfrom_createdat_idx")
  @@index([authorId, createdAt(sort: Desc), id(sort: Desc)], map: "idx_blog_author_created")
  @@index([authorId, createdAt(sort: Desc)], map: "idx_blog_author_created_at")
  @@index([createdAt], map: "idx_blog_created_at")
  @@index([createdAt(sort: Desc), id(sort: Desc)], map: "idx_blog_created_at_id")
  @@index([createdAt(sort: Desc), id(sort: Desc)], map: "idx_blog_created_id")
  @@index([createdAt(sort: Desc)], map: "idx_blog_createdat")
  @@index([createdAt(sort: Desc), id(sort: Desc)], map: "idx_blog_createdat_id")
  @@index([isdeleted], map: "idx_blog_isdeleted")
}

model Hashtag {
  id          BigInt        @id @default(autoincrement())
  name        String        @unique
  usage_count Int           @default(0)
  created_at  DateTime      @default(now())
  blogs       BlogHashtag[]

  @@map("hashtag")
}

model BlogHashtag {
  blog_id    String
  hashtag_id BigInt
  created_at DateTime @default(now())
  blog       Blog     @relation(fields: [blog_id], references: [id], onDelete: Cascade)
  hashtag    Hashtag  @relation(fields: [hashtag_id], references: [id], onDelete: Cascade)

  @@id([blog_id, hashtag_id])
  @@index([hashtag_id])
  @@index([blog_id])
  @@map("blog_hashtag")
}

model Comment {
  id            String         @id @default(cuid())
  content       String
  createdAt     DateTime       @default(now())
  authorId      String
  blogId        String
  parentId      String?
  author        User           @relation(fields: [authorId], references: [id])
  blog          Blog           @relation(fields: [blogId], references: [id])
  parent        Comment?       @relation("CommentReplies", fields: [parentId], references: [id])
  replies       Comment[]      @relation("CommentReplies")
  likes         Like[]
  notifications Notification[] @relation("CommentNotifications")

  @@index([authorId, createdAt(sort: Desc)], map: "comment_author_createdat_idx")
  @@index([blogId, createdAt(sort: Desc)], map: "comment_blog_createdat_idx")
  @@index([blogId, createdAt], map: "idx_comment_blog_createdat")
  @@index([blogId, parentId, createdAt], map: "idx_comment_blog_parent")
  @@index([blogId, parentId, createdAt], map: "idx_comment_blog_parent_created")
  @@index([blogId], map: "idx_comment_blogid")
  @@index([parentId, createdAt], map: "idx_comment_parent_created")
  @@index([parentId], map: "idx_comment_parent_id")
  @@index([parentId], map: "idx_comment_parentid")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  blogId    String?
  commentId String?
  blog      Blog?    @relation(fields: [blogId], references: [id], onDelete: Cascade)
  Comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, blogId])
  @@unique([userId, blogId], map: "idx_like_user_blog")
  @@index([blogId])
  @@index([commentId])
  @@index([userId])
}

model Follow {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  followerId  String
  followingId String
  follower    User     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@index([followerId, createdAt(sort: Desc)], map: "follow_follower_createdat_idx")
  @@index([followingId, createdAt(sort: Desc)], map: "follow_following_createdat_idx")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EmailOTP {
  id        String   @id @default(cuid())
  email     String
  otp       String
  expires   DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

model Conversation {
  id            String         @id @default(cuid())
  name          String?
  isGroup       Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  messages      Message[]
  notifications Notification[] @relation("ConversationNotifications")
  participants  Participant[]
}

model Participant {
  id             String       @id @default(cuid())
  userId         String
  conversationId String
  joinedAt       DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])
  readMessages   Message[]    @relation("MessageReadBy")

  @@unique([userId, conversationId])
  @@index([conversationId, joinedAt], map: "participant_conversation_joinedat_idx")
}

model Message {
  id             String         @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  createdAt      DateTime       @default(now())
  fileUrls       String[]       @default([])
  fileNames      String[]       @default([])
  status         MessageStatus  @default(SENT)
  conversation   Conversation   @relation(fields: [conversationId], references: [id])
  sender         User           @relation("MessageSender", fields: [senderId], references: [id])
  notifications  Notification[] @relation("MessageNotifications")
  readBy         Participant[]  @relation("MessageReadBy")

  @@index([conversationId, createdAt(sort: Desc)], map: "message_conversation_createdat_idx")
  @@index([senderId, createdAt(sort: Desc)], map: "message_sender_createdat_idx")
}

model SavedPost {
  id        String   @id @default(cuid())
  userId    String
  blogId    String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, blogId])
}

model Notification {
  id             String           @id @default(cuid())
  userId         String
  actorId        String
  type           NotificationType
  blogId         String?
  commentId      String?
  messageId      String?
  conversationId String?
  isRead         Boolean          @default(false)
  createdAt      DateTime         @default(now())
  actor          User             @relation("ActorNotifications", fields: [actorId], references: [id])
  blog           Blog?            @relation("BlogNotifications", fields: [blogId], references: [id])
  comment        Comment?         @relation("CommentNotifications", fields: [commentId], references: [id])
  conversation   Conversation?    @relation("ConversationNotifications", fields: [conversationId], references: [id])
  message        Message?         @relation("MessageNotifications", fields: [messageId], references: [id])
  user           User             @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([userId, isRead])
}

model admin {
  id             String           @id
  username       String           @unique
  password       String
  fullname       String?
  role           String           @default("MOD")
  isactive       Boolean          @default(true)
  createdat      DateTime         @default(now()) @db.Timestamp(6)
  Blog           Blog[]
  adminactionlog adminactionlog[]
  adminsession   adminsession[]
}

model adminactionlog {
  id        String   @id
  adminid   String
  action    String
  blogid    String?
  reportid  String?
  createdat DateTime @default(now()) @db.Timestamp(6)
  admin     admin    @relation(fields: [adminid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "adminactionlog_admin_fkey")
}

model adminsession {
  id        String   @id
  adminid   String
  token     String   @unique
  expiresat DateTime @db.Timestamp(6)
  createdat DateTime @default(now()) @db.Timestamp(6)
  admin     admin    @relation(fields: [adminid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "adminsession_admin_fkey")
}

model report {
  id         String    @id
  reporterid String
  blogid     String
  reason     String
  status     String    @default("PENDING")
  createdat  DateTime  @default(now()) @db.Timestamp(6)
  reviewedby String?
  reviewedat DateTime? @db.Timestamp(6)
  adminnote  String?
  Blog       Blog      @relation(fields: [blogid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "report_blog_fkey")
  User       User      @relation(fields: [reporterid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "report_reporter_fkey")

  @@index([blogid], map: "idx_report_blog")
  @@index([status], map: "idx_report_status")
}

enum MessageStatus {
  SENT
  DELIVERED
  SEEN
}

enum NotificationType {
  FOLLOW
  NEW_POST
  LIKE_POST
  COMMENT_POST
  SHARE_POST
  MESSAGE
}
